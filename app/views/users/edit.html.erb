<% if @user.errors.any? %>
<div id="error_explanation">
	<h2>
		<%= @user.errors.count %>
		errors prohibited this obj from being saved
	</h2>
	<ul>
		<% @user.errors.full_messages.each do |message| %>
		<li><%= message %></li>
        <% end %>
    </ul>
 <% end %>

 <section class="col-md-8 col-sm-offset-2">
 	<h2>User Edit</h2>
 	<%= form_for(@user) do |f| %>
 	<h4 class="title">Name
 		<%= f.text_field :name %></h4>
 		<div class="form-group has-icon">
 			<div class="user-edit-image">
 			<h4 class="profile">Image</h4>
 			<%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg" %>
 			</div>
 			<%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
 			<h4 class="title">Introduction</h4>
 			<%= f.text_field :introduction %>
 			<br>
 			<div class="submit">
 				<%= f.submit 'Update User' %>
 			</div>
 			<% end %>
 		</div>
 	</section>
 </div>






